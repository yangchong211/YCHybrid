  pod 'Alamofire', '~> 5.10.2'
  # json解析库：https://github.com/SwiftyJSON/SwiftyJSON
  pod 'SwiftyJSON','~> 5.0.2'
  # 图片加载框架：https://github.com/onevcat/Kingfisher
  pod 'Kingfisher', '~> 6.3.1'
  # 布局流行库：https://github.com/SnapKit/SnapKit
  pod 'SnapKit', '~> 5.0.0'
  # grpc库：https://github.com/grpc/grpc-swift
  pod 'gRPC-Swift', '~> 1.0'
  pod 'Protobuf', '~> 3.0'
  
  # 玩android项目
  pod 'PrintBeautifulLog'
  pod 'MJRefresh' #刷新
  pod 'LLCycleScrollView' #轮播
  #  pod 'EmptyDataSet-Swift'
  pod 'HandyJSON'
