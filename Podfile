  pod 'SnapKitExtend' #自动布局扩展
  pod 'SVProgressHUD'
  pod 'MBProgressHUD'
  pod 'Reusable'  #可复用
  #pod 'Tabman' #tab导航
  pod 'JXSegmentedView'
  pod 'LGButton'
  pod 'Toast-Swift', '~> 5.0.1'
  pod 'TagListView', '~> 1.0' #tag标签栏
  pod 'SwiftEventBus', :tag => '5.1.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'

